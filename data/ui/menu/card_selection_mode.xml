<?xml version="1.0"?>
<interface>
    <!-- interface-requires gtk+ 3.0 -->
    <menu id="menu-card-selection-mode">
        <section>
            <item>
                <attribute name="label" translatable="yes">Download</attribute>
                <attribute name="action">app.card.download-selected-chapters</attribute>
            </item>
            <item>
                <attribute name="label" translatable="yes">Reset</attribute>
                <attribute name="action">app.card.reset-selected-chapters</attribute>
            </item>
            <item>
                <attribute name="label" translatable="yes">Mark as read</attribute>
                <attribute name="action">app.card.mark-selected-chapters-as-read</attribute>
            </item>
            <item>
                <attribute name="label" translatable="yes">Mark as unread</attribute>
                <attribute name="action">app.card.mark-selected-chapters-as-unread</attribute>
            </item>
        </section>

        <section>
            <item>
                <attribute name="label" translatable="yes">Select All</attribute>
                <attribute name="action">app.card.select-all-chapters</attribute>
            </item>
        </section>
    </menu>
</interface>
