<?xml version="1.0"?>
<interface>
  <!-- interface-requires gtk+ 3.0 -->
  <menu id="menu-reader">
    <section>
      <submenu>
        <attribute name="label" translatable="yes">Reading direction</attribute>
        <section>
          <attribute name="id">reading-direction-section</attribute>

          <item>
            <attribute name="label" translatable="yes">Right to left ←</attribute>
            <attribute name="action">app.reader.reading-direction</attribute>
            <attribute name="target">right-to-left</attribute>
          </item>
          <item>
            <attribute name="label" translatable="yes">Left to right →</attribute>
            <attribute name="action">app.reader.reading-direction</attribute>
            <attribute name="target">left-to-right</attribute>
          </item>
        </section>
      </submenu>

      <submenu>
        <attribute name="label" translatable="yes">Type of scaling</attribute>
        <section>
          <attribute name="id">scaling-section</attribute>

          <item>
            <attribute name="label" translatable="yes">Adapt to screen</attribute>
            <attribute name="action">app.reader.scaling</attribute>
            <attribute name="target">screen</attribute>
          </item>
          <item>
            <attribute name="label" translatable="yes">Adapt to width</attribute>
            <attribute name="action">app.reader.scaling</attribute>
            <attribute name="target">width</attribute>
          </item>
          <item>
            <attribute name="label" translatable="yes">Adapt to height</attribute>
            <attribute name="action">app.reader.scaling</attribute>
            <attribute name="target">height</attribute>
          </item>
        </section>
      </submenu>

      <submenu>
        <attribute name="label" translatable="yes">Background color</attribute>
        <section>
          <attribute name="id">background-color-section</attribute>

          <item>
            <attribute name="label" translatable="yes">White</attribute>
            <attribute name="action">app.reader.background-color</attribute>
            <attribute name="target">white</attribute>
          </item>
          <item>
            <attribute name="label" translatable="yes">Black</attribute>
            <attribute name="action">app.reader.background-color</attribute>
            <attribute name="target">black</attribute>
          </item>
        </section>
      </submenu>
    </section>
  </menu>
</interface>
