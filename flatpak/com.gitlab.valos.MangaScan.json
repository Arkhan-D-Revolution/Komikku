{
    "app-id" : "com.gitlab.valos.MangaScanDevel",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "master",
    "sdk" : "org.gnome.Sdk",
    "tags" : [
        "devel",
        "development",
        "nightly"
    ],
    "desktop-file-name-prefix" : "(Development) ",
    "command" : "mangascan",
    "finish-args" : [
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=home",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--filesystem=xdg-run/gvfs",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
        "--talk-name=ca.desrt.dconf",
        "--talk-name=org.gtk.vfs",
        "--talk-name=org.gtk.vfs.*",
        "--talk-name=org.freedesktop.Notifications"
    ],
    "modules" : [
        "python3-js2py.json",
        "python3-requests_toolbelt.json",
        "lxml.json",
        {
            "name" : "cfscrape",
            "buildsystem" : "simple",
            "build-commands" : [
                "pip3 install --no-index --find-links=\"file://${PWD}\" --prefix=${FLATPAK_DEST} ."
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/VeNoMouS/cloudflare-scrape-js2py.git"
                }
            ]
        },
        {
            "name" : "beautifulsoup4",
            "buildsystem" : "simple",
            "build-commands" : [
                "pip3 install --no-index --find-links=\"file://${PWD}\" --prefix=${FLATPAK_DEST} beautifulsoup4"
            ],
            "sources" : [
                {
                    "type" : "file",
                    "url" : "https://files.pythonhosted.org/packages/77/78/bca00cc9fa70bba1226ee70a42bf375c4e048fe69066a0d9b5e69bc2a79a/soupsieve-1.8-py2.py3-none-any.whl",
                    "sha256" : "afa56bf14907bb09403e5d15fbed6275caa4174d36b975226e3b67a3bb6e2c4b"
                },
                {
                    "type" : "file",
                    "url" : "https://files.pythonhosted.org/packages/1d/5d/3260694a59df0ec52f8b4883f5d23b130bc237602a1411fa670eae12351e/beautifulsoup4-4.7.1-py3-none-any.whl",
                    "sha256" : "034740f6cb549b4e932ae1ab975581e6103ac8f942200a0e9759065984391858"
                }
            ]
        },
        {
            "name" : "libhandy",
            "buildsystem" : "meson",
            "config-opts" : [
                "-Dtests=false",
                "-Dexamples=false",
                "-Dgtk_doc=false",
                "-Dvapi=false",
                "-Dglade_catalog=disabled"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "tag" : "v0.0.9",
                    "url" : "https://source.puri.sm/Librem5/libhandy.git"
                }
            ]
        },
        {
            "name" : "mangascan",
            "buildsystem" : "meson",
            "builddir" : true,
            "config-opts" : [
                "-Dprofile=development"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.com/valos/MangaScan.git"
                }
            ]
        }
    ],
    "build-options" : {
        "env" : {
            "LANG" : "fr_FR.utf-8",
            "LANGUAGE" : "fr_FR.utf-8"
        }
    }
}
